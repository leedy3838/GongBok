<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/logoImage"
                android:layout_weight="1"
                android:src="@drawable/main_line"></ImageView>

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/logoImage"
                android:paddingTop="25dp"
                android:paddingEnd="5dp"
                android:text="root712"></TextView>
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/logoImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_toRightOf="@id/logoImage"
                android:src="@drawable/main_line" />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/SPratingImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentBottom="true"
                android:paddingHorizontal="5dp"
                android:paddingBottom="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_square" />

            <ImageView
                android:id="@+id/ratingImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/SPratingImage"
                android:layout_marginBottom="-1dp"
                android:paddingHorizontal="5dp"
                android:paddingBottom="230dp"
                android:scaleType="fitXY"
                android:src="@drawable/main_square" />
            <GridLayout
                android:id="@+id/mainRatingShow"
                android:layout_below="@id/topRateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="13"
                android:layout_marginHorizontal="13dp"
                android:layout_marginTop="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mainRatingScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="17dp"
                android:text="test"/>
            <ImageView
                android:id="@+id/spl1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:scaleType="fitXY"
                android:layout="@id/SPratingImage"
                android:layout_marginTop="320dp"
                android:layout_marginHorizontal="3dp"
                android:alpha=".15"
                android:src="@drawable/main_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="17dp"
                android:text="test"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:scaleType="fitXY"
                android:layout="@id/SPratingImage"
                android:layout_marginTop="360dp"
                android:layout_marginHorizontal="3dp"
                android:alpha=".15"
                android:src="@drawable/main_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="17dp"
                android:text="test"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:scaleType="fitXY"
                android:layout="@id/SPratingImage"
                android:layout_marginTop="400dp"
                android:layout_marginHorizontal="3dp"
                android:alpha=".15"
                android:src="@drawable/main_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="17dp"
                android:text="test"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:scaleType="fitXY"
                android:layout="@id/SPratingImage"
                android:layout_marginTop="440dp"
                android:layout_marginHorizontal="3dp"
                android:alpha=".15"
                android:src="@drawable/main_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="448dp"
                android:layout_marginLeft="17dp"
                android:text="test"/>

            <TextView
                android:id="@+id/ratingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingTop="5dp"
                android:text="Rating 1011"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/restOfRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:text="  Next 189"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/topRateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingValue"
                android:paddingLeft="18dp"
                android:paddingTop="5dp"
                android:text="상위 12.11%"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingValue"
                android:layout_toRightOf="@id/topRateValue"
                android:paddingLeft="18dp"
                android:paddingTop="5dp"
                android:text="2111 place"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/totalRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/restOfRating"
                android:layout_alignLeft="@id/restOfRating"
                android:layout_marginLeft="5dp"
                android:onClick="goToTotalRanking"
                android:background="@drawable/btn_mint"
                android:padding="6dp"
                android:textStyle="bold"
                android:text="   전체 랭킹   " />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageButton
            android:id="@+id/goToProblemSolve"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:backgroundTint="@color/white"
            android:onClick="goToProblemSolve"
            android:src="@drawable/ic_to_solve" />

        <ImageButton
            android:id="@+id/goToMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha=".50"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/goToEnrollProblem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"
            android:onClick="goToEnrollProblem"
            android:src="@drawable/ic_to_enroll_problem" />

    </RelativeLayout>

</LinearLayout>